{
  "short_name": "My Extension",
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "*://*.youtube.com/*",
    "tabs",
    "activeTab"
  ],
  "browser_action": {},
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "content.css"
  ]
}